@model BLOG.Models.PalindromeViewModels

    @using (Html.BeginForm())
    {
        <div class="row">
            <input name="inputWord" type="text" />
        </div>
        <div class="row">
            <input type="submit" value="Submit Palidrome" />
        </div>
    }

    @if (Model != null)
    {
        <div class="row">
            @*Html.Raw is good for blog*@
            <p>Palindrome message: @Model.outputWord</p>
        </div>
    }
