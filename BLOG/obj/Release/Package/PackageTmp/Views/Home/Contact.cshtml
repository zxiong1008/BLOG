@model BLOG.Models.Contact

@*@{
        ViewBag.Title = "Contact";
    }
    <h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>*@

<!-- Contact Section -->

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="section-heading"><i class="fa fa-paper-plane"></i> Contact Me</h1>
                <h3 class="section-subheading text-muted">
                    EMAIL:
                    <a href="mailto:zxiong1008@gmail.com">zxiong1008@gmail.com</a>
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @*<form name="sentMessage" id="contactForm" novalidate>*@
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {
                    //security measure by MVC which block unauthorized users,
                    //generated a new token from the 'GET' action, when it goes to the 'POST' controller
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="First Name" name="firstname" id="firstname">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Last Name" name="lastname" id="lastname">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Email *" name="email" id="email" required data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="tel" class="form-control" placeholder="Phone" name="phone" id="phone">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Your Message *" name="message" id="message" required data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-xl">Send Message</button>
                        </div>
                    </div>
                }
                @*</form>*@
            </div>
        </div>
    </div>
</section>