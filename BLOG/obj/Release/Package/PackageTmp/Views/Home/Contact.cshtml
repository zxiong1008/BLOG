<style>
	body {
		background-color: transparent;
	}
</style>
<div class="row row-black">
	<div class="col-lg-12">
		<div class="intro-text">
			<div class="intro-heading">
				<i class="fa fa-envelope"></i> Contact Me
			</div>
		</div>
	</div>
</div>
<div class="row row-white">
	<div class="col-lg-12">
		@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
		{
			//security measure by MVC which block unauthorized users,
			//generated a new token from the 'GET' action, when it goes to the 'POST' controller
			@Html.AntiForgeryToken()
			<div class="row">
				<div class="col-md-2 text-right">To: </div>
				<div class="col-md-10">
					<a href="mailto:zxiong1008@gmail.com">zxiong1008@gmail.com</a>
				</div>
				<div class="col-md-2 text-right">From: </div>
				<div class="col-md-10">
					<div class="form-group">
						<input type="email" class="form-control" placeholder="Email *" name="email" id="email" required data-validation-required-message="Please enter your email address.">
						<p class="help-block text-danger"></p>
					</div>
				</div>
				<div class="col-md-offset-2 col-md-5">
					<div class="form-group">
						<input type="text" class="form-control" placeholder="First Name (Optional)" name="firstname" id="firstname">
						<p class="help-block text-danger"></p>
					</div>
				</div>
				<div class="col-md-5">
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Last Name (Optional)" name="lastname" id="lastname">
						<p class="help-block text-danger"></p>
					</div>
				</div>
				<div class="col-md-2 text-right">Message: </div>
				<div class="col-md-10">
					<div class="form-group">
						<textarea class="form-control" placeholder="Your Message *" name="message" id="message" required data-validation-required-message="Please enter a message."></textarea>
						<p class="help-block text-danger"></p>
					</div>
				</div>
				<div class="col-md-12">
					<div id="success"></div>
					<button type="submit" class="btn btn-primary pull-right">Send <i class="fa fa-send"></i></button>
				</div>

			</div>
