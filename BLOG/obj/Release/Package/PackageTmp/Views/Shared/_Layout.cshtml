					<li><a href="~/Home/Portfolio"><i class="fa fa-folder"></i> Portfolio</a></li>
					<li><a href="~/Posts/Index"><i class="fa fa-comments"></i> Blog</a></li>
					<li><a href="~/Home/Contact"><i class="fa fa-envelope"></i> Contact</a></li>
				</ul>
				@if (Request.IsAuthenticated)
				{
					using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
					{
						@Html.AntiForgeryToken()

						<ul class="nav navbar-nav navbar-right" style="padding-right: 25px;">
							<li>
								@* ------add FONT AWSOME in RAZOR SYNTAX by using the package *@
								<a href="@Url.Action("Index", "Manage")"><i class="fa fa-user"></i> Hello @Html.Raw(Html.Action("GetCurrentUserName", "Account"))!</a>
								@*@Html.ActionLink("Hello " + Html.Raw(Html.Action("GetCurrentUserName", "Account")) + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
								@*@Html.ActionLink("Hello " + @Html.Raw(Html.Action("GetCurrentUserName", "Account")) + "!", "Index", "Manage", routeValues: new { area = "" }, htmlAttributes: new { title = "Manage" })*@
							</li>
							<li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> Log off</a></li>
						</ul>
					}
				}
				else
				{
					<ul class="nav navbar-nav navbar-right" style="padding-right: 25px;">
						<li><a href="~/Account/Register"><i class="fa fa-pencil"></i> Register</a></li>
						<li><a href="~/Account/Login"><i class="fa fa-sign-in"></i> Login</a></li>
					</ul>
				}
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>

	<footer>
